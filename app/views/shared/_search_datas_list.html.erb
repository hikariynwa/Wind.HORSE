<div class="overflow-x-auto">
  <table class="min-w-full bg-white">
    <thead class="bg-gray-100">
      <tr>
        <th class="py-2 px-4 border-b text-center" width="250"><%= sort_link(@q, :location_name, "競馬場") %></th>
        <th class="py-2 px-4 border-b text-center" width="150"><%= sort_link(@q, :wind_speed, "風速 (m/s)") %></th>
        <th class="py-2 px-4 border-b text-center" width="250"><%= sort_link(@q, :wind_direction, "風向") %></th>
        <th class="py-2 px-4 border-b text-center" width="150">メモ</th>
        <th class="py-2 px-4 border-b text-center" width="250"><%= sort_link(@q, :created_at, "作成日時") %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="py-2 px-4 border-b text-center"><%= search_data.location_name %></td>
        <td class="py-2 px-4 border-b text-center"><%= number_with_precision(search_data.wind_speed, precision: 1) %></td>
        <td class="py-2 px-4 border-b text-center w-24"><%= search_data.wind_direction %></td>
        <td class="py-2 px-4 border-b text-center"><%= truncate(search_data.memo, length: 15) %></td>
        <td class="py-2 px-4 border-b text-center"><%= search_data.created_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
    </tbody>
  </table>
</div>