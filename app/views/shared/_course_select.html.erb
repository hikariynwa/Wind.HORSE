<div class="absolute top-56 w-full flex justify-center mx-auto space-x-8">
  <div class="relative z-50">
    <%= form_with url: courses_show_path, method: :get, id: "course-form", data: { turbo_method: :get, turbo_stream: true } do |form| %>
      <%= form.hidden_field :location, value: params[:location] %> <!-- 競馬場の場所を送信 -->

      <% options = COURSE_OPTIONS[params[:location].to_sym] || [] %>
      <%= form.select :course_option, options %>

      <%= form.submit "表示" %>
    <% end %>
  </div>
</div>