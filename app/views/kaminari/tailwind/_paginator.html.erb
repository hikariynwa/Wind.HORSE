<%= paginator.render do %>
  <nav class="flex justify-center my-4">
    <%= first_page_tag class: "p-2 mx-1 rounded bg-gray-200 hover:bg-gray-300" unless current_page.first? %>
    <%= prev_page_tag class: "p-2 mx-1 rounded bg-gray-200 hover:bg-gray-300" unless current_page.first? %>
    <% each_page do |page| %>
      <% if page.display_tag? %>
        <%= page_tag page, class: "p-2 mx-1 rounded #{page.current? ? 'bg-blue-500 text-white' : 'bg-gray-200 hover:bg-gray-300'}" %>
      <% elsif !page.was_truncated? %>
        <%= gap_tag class: "p-2 mx-1" %>
      <% end %>
    <% end %>
    <%= next_page_tag class: "p-2 mx-1 rounded bg-gray-200 hover:bg-gray-300" unless current_page.last? %>
    <%= last_page_tag class: "p-2 mx-1 rounded bg-gray-200 hover:bg-gray-300" unless current_page.last? %>
  </nav>
<% end %>