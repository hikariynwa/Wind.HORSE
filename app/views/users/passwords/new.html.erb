<div class="container mx-auto h-screen flex flex-col justify-center items-center">
  <div class="py-6 mt-4">
    <div class="text-3xl">パスワードリセット申請</div>
  </div>

  <div class="w-full max-w-md py-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :email, class: 'block text-lg' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full p-2 border border-gray-300 rounded' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'bg-blue-600 text-white py-2 px-4 rounded' %>
      </div>
    <% end %>
  </div>

  <div class="w-full max-w-md">
    <%= render "users/shared/links" %>
  </div>
</div>
